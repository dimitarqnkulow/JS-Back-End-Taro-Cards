
            <h1>Edit Cube</h1>
            <div class="form">
                <form method="POST">
                    <label for="name">Name</label>
                    <input type="text" id="name" name="name" value="{{card.name}}">
                    <label for="description">Description</label>
                    <textarea id="description" name="description">{{card.description}}</textarea>
                    <label for="image">ImageUrl</label>
                    <input type="text" id="image" name="imageUrl" value="{{card.imageUrl}}">
                    <label for="arcanNumber">Major Arcan</label>
                    <select id="arcanNumber" name="arcanNumber" />
                    {{#each options}}
                        <option value="{{value}}" {{#if isSelected}}selected{{/if}}>{{value}} - {{title}}</option>
                    {{/each}}
                    </select>
                    <input type="submit" value="Edit">
                </form>
            </div>
